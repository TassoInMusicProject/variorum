			<div>
				<lg>
					<l xml:id="l1">Al lume de le stelle</l>
					<l xml:id="l2">Tirsi sott'un alloro</l>
					<l xml:id="l3">si dolea lagrimando in quest'accenti</l>
					<l xml:id="l4">o celesti facelle</l>
					<l xml:id="l5">di lei ch'amo'&amp; adoro</l>
					<l xml:id="l6">rassomigliate voi gl'occhi lucenti</l>
					<l xml:id="l7"><seg xml:id="l7v1">[TACET]</seg></l>
					<l xml:id="l8"><seg xml:id="l8v1">[TACET]</seg></l>
					<l xml:id="l9">luci serene'e liete</l>
					<l xml:id="l10">sento <seg xml:id="l10v1">le Fiamme</seg> lor mentre splendete.</l>
				</lg>
			</div>
