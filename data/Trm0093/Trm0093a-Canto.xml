				<lg>
					<l xml:id="l1">Disdegno e Gelosia</l>
					<l xml:id="l2">Donna vostri custodi e miei nemici</l>
					<l xml:id="l3">Fan gli occhi miei famelici e mendici</l>
					<l xml:id="l4">E insieme il dolce raggio</l>
					<l xml:id="l5">De gli occhi vostri e i bei cortesi detti</l>
					<l xml:id="l6">Pien di spirti e d'affetti</l>
					<l xml:id="l7">Mi toglie de duo crudi il doppio oltraggio</l>
				</lg>
				<lg>
					<l xml:id="l8">Tal che lasso d'intorno</l>
					<l xml:id="l9">Alle guardate mura</l>
					<l xml:id="l10">Erro la notte solitario eâ€™l giorno</l>
					<l xml:id="l11">Qual predator ch'insidi</l>
					<l xml:id="l12">D'errante fera i boscharecci nidi</l>
					<l xml:id="l13">Ma non vuol mia ventura</l>
					<l xml:id="l14">Che senza pena invole onde divegno</l>
					<l xml:id="l15">Preda di predator e d'arcier segno.</l>
				</lg>
			</div>
