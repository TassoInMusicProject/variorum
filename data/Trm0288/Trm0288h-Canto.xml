					<l xml:id="l1">Amatemi ben mio</l>
					<l xml:id="l2">Perche sdegn’il mio core</l>
					<l xml:id="l3">Ogn’altro cibo e vive sol d’Amore</l>
					<l xml:id="l4">V’amerò se m’amate</l>
					<l xml:id="l5">[TACEt]</l>
					<l xml:id="l6">[TACET] e fia con lui finita</l>
					<l xml:id="l7">Ma s’amarmi negate</l>
					<l xml:id="l8">Morirò disperato</l>
					<l xml:id="l9">Per non amarvi non essend’amato.</l>
