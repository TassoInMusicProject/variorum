				<lg>
					<l xml:id="l1">Donna longe da voi</l>
					<l xml:id="l2">Vivo del mio dolore</l>
					<l xml:id="l3">Ne manca 'l cibo con la vit'al core</l>
					<l xml:id="l4">Perche da voi deriva</l>
					<l xml:id="l5">E pare un fiume senza fondo o riva</l>
					<l xml:id="l6">Voi sete il font'e’l rio</l>
					<l xml:id="l7">Della vostra bellezza e’l pianto mio.</l>
				</lg>
