				<lg>
					<l xml:id="l1">Ho visto al pianto mio</l>
					<l xml:id="l2">[TACET]</l>
					<l xml:id="l3">E sospirar le fronde</l>
					<l xml:id="l4">Ho visto al pianto mio</l>
					<l xml:id="l5">Ma non ho visto mai</l>
					<l xml:id="l6">Ne spero di vedere</l>
					<l xml:id="l7">Compassion nella crudel e bella</l>
					<l xml:id="l8">[TACET] Ò Donna ò Fera</l>
					<l xml:id="l9">Ma nega d’esser Donna</l>
					<l xml:id="l10">Poi che nega pietate</l>
					<l xml:id="l11">A chi non la negaro</l>
					<l xml:id="l12">Le cose inanimate</l>
					<l xml:id="l13">[TACET] Il Lupo l’Agno</l>
					<l xml:id="l14">Ma il crud’Amor di lagrime si pasce</l>
					<l xml:id="l15">[TACET] mai sattollo ahi lasso</l>
					<l xml:id="l16">[TACET]</l>
					<l xml:id="l17">E solo ha sete del mio sangue e tosto</l>
					<l xml:id="l18">Voglio ch’egl’e quest’empia il sangue mio</l>
					<l xml:id="l19">Bevan con gl’occhi.</l>
				</lg>
			</div>
